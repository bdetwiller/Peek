<!DOCTYPE html>
<html>
<head>
  <title>Peek</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <% if alert || notice %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <% end %>
  <script type="text/javascript">
    $(document).ready(function () {
      $('ul.nav > li').click(function (e) {
        $('ul.nav > li').removeClass('active');
        $(this).addClass('active');
      });
    });
  </script>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-40572898-1', 'heroku.com');
    ga('send', 'pageview');

</script>
</head>
<body>

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner" float="left">
      <a class="brand" href="">See what's happening</a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li>
              <a href="#explore">Explorer mode</a>
            </li>
            <li>
              <a href="#events">Trending places</a>
            </li>
            <li>
              <a href="#friends">Friends</a>
            </li>
          </ul>
          <ul class="nav">
            <!-- <li class="Lists">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Lists <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li> <%= link_to "Create new list", "#lists/new" %> </li>
                <li><%= link_to "List 2", "#list/id" %></li>
              </ul>
            </li> -->
          </ul>
          <ul class="nav pull-right">
            <li class="Login/Logout">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sign In/Out <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li> <%= link_to "Sign in", new_user_session_url %> </li>
                <li><%= link_to "Sign out", destroy_user_session_url, :method => :delete %></li>
              </ul>
            </li>
          </ul>
          <div class="navbar-search center">
            <input type="text" id="placesearch" placeholder="Search for a place" class="search-query span4">
          </div>
        </div>
    </div>
  </div>







<%= yield %>

</body>
</html>
